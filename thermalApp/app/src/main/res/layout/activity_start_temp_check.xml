<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/temp_check_start"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartMqttActivity"
        android:background="#01579B"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_alignParentTop="true">
    <Button
            android:id="@+id/btn_mqtt_connect"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Status"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textColor="#000"
            android:padding="21dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/round_btn_network"
            tools:ignore="HardcodedText,RtlSymmetry"/>
    <TextView
            android:id="@+id/text_topic_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#57827717"
            android:layout_gravity="end"
            android:textSize="6pt"
            android:layout_margin="10pt"
            android:textColor="#AF0909"
            android:fontFamily="serif-monospace"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="12pt"
            android:layout_margin="1pt"
            android:gravity="center_horizontal"
            android:text="Current Temperature"
            tools:ignore="HardcodedText"/>

    <TextView
            android:id="@+id/text_temp_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:textStyle="bold"
            android:layout_margin="10pt"
            android:textColor="#fff"
            android:fontFamily="monospace"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10pt"
            android:textColor="#fff"
            android:fontFamily="serif-monospace"
            android:text="Slide right or left to set a temperature value"
            tools:ignore="HardcodedText"/>
        <TextView
                android:id="@+id/text_seek_bar"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <SeekBar
                android:theme="@style/MySeekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="15"
                android:max="28"
        />
    </LinearLayout>
</RelativeLayout>